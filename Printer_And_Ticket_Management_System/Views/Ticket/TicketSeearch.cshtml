@model Printer_And_Ticket_Management_System.Models.Ticket

@{
 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ticket Search</h2>

@Html.AntiForgeryToken()

<div class="form-horizontal">
    @using (Html.BeginForm("TicketSeearch", "Ticket"))
    {

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-12 row">
            <div class="form-group col-12">
                @Html.LabelFor(model => model.TicketID, htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-12 row">
                    @* <input type="text" value="Enter Printer ID and search"> *@
                    @Html.TextBoxFor(model => model.TicketID, new { @class = "form-control col-8", type = "number", min = "1", step = "1", required = "required" })
                    @*  @Html.EditorFor(model => model.TicketID, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.TicketID, "", new { @class = "text-danger" })

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }


                    <div class="form-group col-4">
                        <div class="col col-md-10">
                            <input type="submit" value="Search" class="btn btn-primary col-12" />
                        </div>
                    </div>


                </div>
            </div>

           
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.TicketID, "TicketID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.TicketID)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.TicketDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.TicketDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PrinterID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.PrinterID)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.CreatedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BranchID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.BranchID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OpenedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.OpenedDate)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.OpenedBy, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.OpenedBy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClosedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ClosedDate)
            </div>
        </div>

    }

</div>

