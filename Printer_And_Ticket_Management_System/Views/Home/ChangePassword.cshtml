@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .change-password-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }

        .change-password-container h2 {
            margin-top: 0;
            font-size: 24px;
            color: #333;
        }

        .change-password-container input[type="password"],
        .change-password-container input[type="submit"] {
            display: block;
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .change-password-container input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            cursor: pointer;
        }

    .success-message,
    .error-message {
        display: none;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 3px;
    }

    .success-message {
        background-color: #d4edda;
        color: #155724;
    }

    .error-message {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>

<div class="change-password-container">
    <h2>Change Password</h2>
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="success-message">
            @ViewBag.SuccessMessage
        </div>
        <script>
            $(document).ready(function () {
                setTimeout(function () {
                    $(".success-message").fadeOut("slow");
                }, 5000);
            });
        </script>
    }
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="error-message">
            @ViewBag.ErrorMessage
        </div>
        <script>
            $(document).ready(function () {
                setTimeout(function () {
                    $(".error-message").fadeOut("slow");
                }, 5000);
            });
        </script>
    }
    @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { onsubmit = "return validatePassword();" }))
    {
        <input type="password" id="currentPassword" name="currentPassword" placeholder="Current Password" required>
        <input type="password" id="newPassword" name="newPassword" placeholder="New Password" required>
        <input type="password" id="verifiedPassword" placeholder="Verify Password" required>
        <input type="submit" value="Change Password">
    }
</div>

<script>
    function validatePassword() {
        var newPassword = document.getElementById("newPassword").value;
        var verifiedPassword = document.getElementById("verifiedPassword").value;

        if (newPassword !== verifiedPassword) {
            alert("New password and verified password do not match. Please try again.");
            return false;
        }

        return true;
    }
</script>