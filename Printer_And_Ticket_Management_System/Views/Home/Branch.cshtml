@model IEnumerable<Printer_And_Ticket_Management_System.Data.Table_Branch>
@{

    Layout = "../Shared/_Layout.cshtml";

}
@{
    ViewBag.Title = "Branch";
}

<h2>Branch</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BranchID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchLocation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BranchID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BranchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BranchLocation)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditBranch", new { Bid = item.BranchID }) |

                @Html.ActionLink("Delete", "DeleteBranch", new { Bid = item.BranchID })
            </td>
        </tr>
    }

</table>
