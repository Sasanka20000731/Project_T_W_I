@model Printer_And_Ticket_Management_System.Models.ModelMails
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!--Section: Contact v.2-->
<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
    <!--Section description-->

    @using (@Html.BeginForm("sentEmail", "Home"))
    {
        <div class="row">

            <!--Grid column-->
            <div class="col-md-9 mb-md-0 mb-5">
                <form id="contact-form" name="contact-form" action="mail.php" method="POST">

                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-4">
                            <div class="md-form mb-0">
                                <label for="name" class="">Your name</label>
                                <input type="text" id="name" name="name" class="form-control">

                            </div>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-4 padding-bottom-20">
                            <div class="md-form mb-0">
                                <label for="email" class="">Your email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                @*<input type="text" id="email" name="email" class="form-control">*@

                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="md-form mb-0">
                                <label for="Password" class="">Password</label>
                                @*  @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                @*  <input type="password" id="Password" name="Pssword" class="form-control">*@

                            </div>
                        </div>
                        <!--Grid column-->

                    </div>

                    <!--Grid row-->
                    <div class="row">
                        <div class="col-md-12 padding-bottom-20">
                            <div class="md-form mb-0">
                                <label for="subject" class="">Subject</label>
                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                @*  <input type="text" id="subject" name="subject" class="form-control">*@

                            </div>
                        </div>
                    </div>
                    <!--Grid row-->
                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-12">

                            <div class="md-form ">
                                <label for="body">Your message</label>
                                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                                @*   <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>*@

                            </div>

                        </div>
                    </div>
                    <!--Grid row-->
                    <div class="text-center text-md-left , col-10 , padding-top-30">
                        <input type="submit" value="Send" class="btn btn-primary">
                        @* <a class="btn btn-primary" onclick="">Send</a>*@
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div id="successMessage" class="alert alert-success mt-3">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- Display Error Message -->
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div id="errorMessage" class="alert alert-danger mt-3">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                </form>


                <div class="status"></div>
            </div>
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-md-3 text-center">
                <ul class="list-unstyled mb-0">
                    <li>
                        <i class="fa fa-address-book"></i>
                        <p>59/1A ,Navinna,Maharagama. </p>
                    </li>

                    <li>
                        <i class="fa fa-phone"></i>
                        <p>+76 9456 123</p>
                    </li>

                    <li>

                        <i class="fa fa-address-card"></i>
                        <p>contact@PTMS.com</p>
                    </li>
                </ul>
            </div>
            <!--Grid column-->

        </div>
    }
</section>
<!--Section: Contact v.2-->
<script>
    // Function to hide the success message
    function hideSuccessMessage() {
        var successMessage = document.getElementById("successMessage");
        if (successMessage) {
            successMessage.style.display = "none";
        }
    }

    // Function to hide the error message
    function hideErrorMessage() {
        var errorMessage = document.getElementById("errorMessage");
        if (errorMessage) {
            errorMessage.style.display = "none";
        }
    }

    // Hide the success message after 5 seconds
    setTimeout(hideSuccessMessage, 10000);

    // Hide the error message after 5 seconds
    setTimeout(hideErrorMessage, 10000);
</script>