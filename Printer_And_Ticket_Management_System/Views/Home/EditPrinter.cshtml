@model Printer_And_Ticket_Management_System.Models.Printer
@{

    Layout = "../Shared/_Layout.cshtml";

}
@{
    ViewBag.Title = "EditPrinter";
}

<h2>Edit Printer</h2>


@using (Html.BeginForm("UpdateDis", "Home",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PrinterID)

    <div class="form-group">
        <label for="PrinterID" class="control-label col-md-2">Printer ID</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PrinterID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.PrinterID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="PrinterCode" class="control-label col-md-2">Printer Code</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PrinterCode, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.PrinterCode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="BrandName" class="control-label col-md-2">Brand Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="PurchasedDate" class="control-label col-md-2">Purchased Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PurchasedDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.PurchasedDate, "", new { @class = "text-danger" })
            </div>
</div>

    <div class="form-group">
        <label for="VendorName" class="control-label col-md-2">Vendor Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.VendorName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.VendorName, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <label for="VendorContact" class="control-label col-md-2">Vendor Contact</label>
        <div class="col-md-10">
          @*  @Html.EditorFor(model => model.VendorContact, new { @class = "form-control", pattern = "^0[0-9]{9}$", @required = "required" })*@
            @Html.TextBoxFor(model => model.VendorContact, new { @class = "form-control", pattern = "^0[0-9]{9}$", required = "required" })
            @Html.ValidationMessageFor(model => model.VendorContact, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="WarrantyPeriod" class="control-label col-md-2">Warranty Period</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.WarrantyPeriod, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.WarrantyPeriod, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <label for="Reason" class="control-label col-md-2">Reason</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

